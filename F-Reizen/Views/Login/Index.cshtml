@model Outsourcing_F_Reizen.Models.Account
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
<body style="background-color: #444; background: url(https://fotos.websitesvoortherapeuten.com/wp-content/uploads/2016/01/84-Vliegtuig-wolke-raam-1920-Fotos-voor-Therapeuten.jpg)">
    <div class="container" style="margin-top:10%">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row-fluid user-row">
                            <img src="/Images/g17.png" class="img-responsive" alt="Conxole Admin" />
                        </div>
                    </div>
                    <div class="panel-body">
                        @if (ViewBag.LoginCheck != null)
                        {
                            <p style="text-align: center"><b>@ViewBag.LoginCheck</b></p>
                        }
                        <fieldset>
                            <label class="panel-login">
                                <div class="login_result"></div>
                            </label>
                            @using (Html.BeginForm("Inloggen", "Login", new {@class = "form-signin"}))
                            {
                                @Html.TextBoxFor(m => m.Username, new {@class = "form-control", @style = "max-width:500px !important; margin-bottom:5px", @placeholder = "Gebruikersnaam", @id = "username", @required = "true", @type = "text"})
                                @Html.TextBoxFor(m => m.Password, new {@class = "form-control", @style = "max-width:500px !important; margin-bottom:10px", @placeholder = "Wachtwoord", @id = "wachtwoord", @required = "true", @type = "password"})
                                <input type="hidden" value="@TempData["returnurl"]" name="returnurl"/>
                                <input class="btn btn-lg btn-success btn-block" style="max-width: 500px !important" type="submit" id="login" value="Login »">
                            }
                            <br>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


