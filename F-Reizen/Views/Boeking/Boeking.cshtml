@model F_Reizen.Models.BoekingViewModel
@{
    ViewBag.Title = "Index";
}

@{ 
    var radiobuttons = new List<int>() {1, 2};
}
<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Boekingsproces</legend>

        @using (Html.BeginForm("Persoonsgegevens", "BoekingController", FormMethod.Post))
        {
            <div class="container" style="width: 70%; float: left">

                @{ 
                    for(int i = 0; i < radiobuttons.Count; i++)
                    {
                        //@Html.RadioButtonFor(m => m.Boeking)
                    }
                }

                <!-- Multiple Radios (inline) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Aantal kinderen">Aantal kinderen</label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="Aantal kinderen-0">
                            <input name="Aantal kinderen" id="Aantal kinderen-0" type="radio" checked="checked" value="">
                            1
                        </label>
                        <label class="radio-inline" for="Aantal kinderen-1">
                            <input name="Aantal kinderen" id="Aantal kinderen-1" type="radio" value="2">
                            2
                        </label>
                    </div>
                </div>

                <!-- Multiple Radios (inline) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Aantal kamers">Aantal kamers</label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="Aantal kamers-0">
                            <input name="Aantal kamers" id="Aantal kamers-0" type="radio" checked="checked" value="1">
                            1
                        </label>
                        <label class="radio-inline" for="Aantal kamers-1">
                            <input name="Aantal kamers" id="Aantal kamers-1" type="radio" value="2">
                            2
                        </label>
                        <label class="radio-inline" for="Aantal kamers-2">
                            <input name="Aantal kamers" id="Aantal kamers-2" type="radio" value="3">
                            3
                        </label>
                    </div>
                </div>

                <!-- Multiple Radios (inline) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Vervoer">Vervoer</label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="Vervoer-0">
                            <input name="Vervoer" id="Vervoer-0" type="radio" checked="checked" value="1">
                            Eigen vervoer
                        </label>
                        <label class="radio-inline" for="Vervoer-1">
                            <input name="Vervoer" id="Vervoer-1" type="radio" value="2">
                            Vliegtuig
                        </label>
                    </div>
                </div>

                <!-- Select Multiple -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Vliegvelden">Vliegvelden</label>
                    <div class="col-md-4">
                        <select name="Vliegvelden" class="form-control" id="Vliegvelden" multiple="multiple">
                            <option value="1">Schiphol</option>
                            <option value="2">Eindhoven</option>
                            <option value="3">Rotterdam</option>
                        </select>
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="singlebutton"></label>
                    <div class="col-md-4">
                        <button name="singlebutton" class="btn btn-primary" id="singlebutton">Volgende</button>
                    </div>
                </div>
            </div>
        }
       
        
    @{ 
            Html.RenderPartial("_Bon");
    }
        


    </fieldset>
</form>


